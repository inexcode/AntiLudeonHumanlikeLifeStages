        <deathOnFailedSurgeryChance>0.15</deathOnFailedSurgeryChance>
        <skillRequirements>
            <Medicine>10</Medicine>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>6</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
            <disallowedThingDefs>
                <li>MedicineHerbal</li>
            </disallowedThingDefs>
        </fixedIngredientFilter>
